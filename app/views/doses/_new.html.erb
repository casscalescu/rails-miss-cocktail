<%= simple_form_for [cocktail, dose] do |f| %>
  <%= button_tag type: 'submit' do %>
    <i class="fas fa-plus"></i>
  <% end %>
  <%= f.input :description, placeholder: 'Amount', label: false, wrapper_html: { class: 'main-container__input' } %>
  <%= f.association :ingredient, prompt: 'Ingredient', label: false, wrapper_html: { class: 'main-container__input' } %>
<% end %>
